mixin imagesDetail
    .product-info__item-img--small
        each image in listImages
            .product-info__item-show
                img.img-child(src=image alt='img')

mixin productSame
    each listProductDetail in listProductDetails
        - const {img, title, price, rates, feedback} = listProductDetail
        .col-lg-4.col-md-6.home-product.product-detail.home-product-mobile
            +productItem(img, title, price, rates, feedback)
